datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


model User {
  id            String         @id @default(auto()) @map("_id") @db.ObjectId
  userName      String
  email         String         @unique
  password      String
  emailVerified DateTime?      @map("email_verified")
  image         String?   
  friends       Friends[]
  Sender          Conversations[] @relation("sender")
  Receiver        Conversations[] @relation("receiver")
  SenderMessage   Message[]       @relation("senderMessage")
  ReceiverMessage Message[]       @relation("receiverMessage")

  @@map("users")
}

type Friends {
  userId   String
  friendId String
  
}

model Conversations {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  sender   String    @db.ObjectId
  receiver String    @db.ObjectId
  senderId     User      @relation(fields: [sender], references: [id], name: "sender")
  receiverId   User      @relation(fields: [receiver], references: [id], name: "receiver")
  Message    Message[]
  
    @@map("conversations")
}

model Message {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId 
  conversationId String        @db.ObjectId
  conversation   Conversations @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  senderId         User          @relation(fields: [sender], references: [id], onDelete: Cascade, name: "senderMessage")
  receiverId       User          @relation(fields: [receiver], references: [id], onDelete: Cascade, name: "receiverMessage")
  time           DateTime      @default(now())
  text           String
  sender       String        @db.ObjectId
  receiver   String        @db.ObjectId

    @@map("messages")
}

